<ValidatedForm
  @model={{@changeset}}
  @on-submit={{perform this.submit}} as |Form|
>
  <Form.input
    @label={{t "component.snippet-form.label.title"}}
    @name="title"
    @required={{true}}
  />

  <Form.input
    @label={{t "component.snippet-form.label.body" lang="DE"}}
    @name="bodyObject.de"
    @type="textarea"
  />
  <Form.input
    @label={{t "component.snippet-form.label.body" lang="EN"}}
    @name="bodyObject.en"
    @type="textarea"
  />
  <Form.input
    @label={{t "component.snippet-form.label.body" lang="FR"}}
    @name="bodyObject.fr"
    @type="textarea"
  />

  <Form.input
    @label={{t "component.snippet-form.label.archived"}}
    @name="archived"
    @type="checkbox"
  />

  <p class="uk-flex uk-flex-right">
    <div>
      <LinkTo class="uk-button uk-button-default" @route="snippets">
        {{t "component.snippet-form.control.cancel"}}
      </LinkTo>

      <Form.submit
        @label={{t "component.snippet-form.control.submit"}}
      />
    </div>
  </p>
</ValidatedForm>
