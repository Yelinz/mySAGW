<div class="uk-margin-small-right uk-width-medium">
  <label class="uk-display-block">{{@label}}</label>
  <PowerSelectMultiple
    @options={{@options}}
    @selected={{this.selection}}
    @onChange={{this.setSelection}}
    @searchEnabled={{true}}
    @searchField="label"
    @triggerClass="uk-select" as |option|
  >
    {{option.label}}
  </PowerSelectMultiple>
</div>
