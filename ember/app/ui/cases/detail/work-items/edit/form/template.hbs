<h3>{{this.workItem.name}}</h3>

{{#if this.fetchWorkItems.isRunning}}
  <div class="uk-text-center uk-padding">
    <UkSpinner @ratio={{2}} />
  </div>
{{else}}
  <CfContent
    @documentId={{this.workItem.document.id}}
    @context={{hash completeCallback=(perform this.completeWorkItem)}}
    @disabled={{not (and this.workItem.isAssignedToCurrentUser this.workItem.isReady)}}
  />
{{/if}}

{{#if this.workItem.canComplete}}
  <WorkItemButton
    @mutation="complete"
    @workItemId={{@model}}
    @type="submit"
    @color="primary"
    @label={{t "workItems.actions.finish"}}
  />
{{/if}}

{{#if this.workItem.canSkip}}
  <WorkItemButton
    @mutation="skip"
    @workItemId={{@model}}
    @type="submit"
    @label={{t "workItems.actions.skip"}}
    @onSuccess={{this.transitionToCase}}
  />
{{/if}}
