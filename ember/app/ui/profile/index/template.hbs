<h1>{{t "page.profile.title"}}</h1>

<UkSwitcher @animation="uk-animation-fade" @active={{this.activeTab}} as |switcher|>
  <switcher.nav @type="tab" as |nav|>
    {{! nav.component is either a uk-tab or a uk-subnav component }}
    <nav.component as |tab|>
      <tab.item {{on "click" (fn this.setActiveTab 0)}}>{{t "page.profile.switcher.identity"}}</tab.item>
      <tab.item {{on "click" (fn this.setActiveTab 1)}}>{{t "page.profile.switcher.organisations"}}</tab.item>
    </nav.component>
  </switcher.nav>

  <switcher.content as |content|>
    <content.item>
      <IdentityForm
        @identity={{this.model}}
        @customEndpoint="me"
        @hideCancel={{true}}
      />

      <hr>

      <div uk-grid class="uk-margin-bottom">
        <div class="uk-width-1-2@m uk-width-1-3@l">
          <div class="uk-card uk-card-default uk-card-body uk-card-small">
            <IdentityAddresses @identity={{this.model}} />
          </div>
        </div>

        <div class="uk-width-1-2@m uk-width-1-3@l">
          <div class="uk-card uk-card-default uk-card-body uk-card-small">
            <IdentityEmails @identity={{this.model}} />
          </div>
        </div>

        <div class="uk-width-1-2@m uk-width-1-3@l">
          <div class="uk-card uk-card-default uk-card-body uk-card-small">
            <IdentityPhoneNumbers @identity={{this.model}} />
          </div>
        </div>
      </div>
    </content.item>

    <content.item>
      <div class="uk-margin-bottom">
        {{#if this.fetchOrganisations.isRunning}}
          <LoadingSpinner />
        {{else}}
          <ul class="uk-list uk-list-divider">
            {{#each this.organisations as |organisation|}}
              {{#unless organisation.isNew}}
                <li>
                  <LinkTo @route="profile.edit" @model={{organisation.id}}
                    class="uk-text-bold uk-flex uk-flex-between uk-flex-wrap">
                    {{#if (or organisation.fullName organisation.isOrganisation)}}
                      <div class="uk-margin-right">
                        {{#if organisation.fullName}}
                          {{organisation.fullName}}
                        {{~/if}}

                        {{~if (and organisation.fullName organisation.isOrganisation) ","}}

                        {{#if organisation.isOrganisation}}
                          {{organisation.organisationName}}
                        {{/if}}
                      </div>
                    {{/if}}

                    <div class="uk-text-small uk-width-1-1 uk-width-auto@s">
                      {{organisation.email}}
                    </div>
                  </LinkTo>
                </li>
              {{/unless}}
            {{else}}
              <li>{{t "page.profile.organisation.empty"}}</li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
    </content.item>
  </switcher.content>
</UkSwitcher>